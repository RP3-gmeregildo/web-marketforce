@model List<Rp3.AgendaComercial.Models.General.Tarea>
@{

}

<div id="searchtarea_content_dialog_form">

    @using (Html.Rp3BeginDataTable(scrollY: "350px", allowSort: false, allowPagination: false, allowSearch: true, sortColumn: 0, htmlAttributes: new { id = "searchtareatable" }))
    {
        <thead>
            <tr>
                <th>@Rp3.AgendaComercial.Resources.LabelFor.Tarea</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                <tr class="selectable-item">
                    <td idTarea="@tarea.IdTarea" descripcion="@tarea.Descripcion">@tarea.Descripcion</td>
            </tr>
            }
        </tbody>
    }
</div>




