@model Rp3.AgendaComercial.Models.Pedido.Categoria
@{
    ViewBag.Title = Rp3.AgendaComercial.Resources.TitleFor.EliminarCanal;
    this.SetImportFormElements(true);
    this.SetImportFormValidations(true);
    this.SetImportTables(true);
}

@section Imports{
    @Url.ImportApplicationScript("canal.js")
}

@using (Html.Rp3BeginForm())
{
    using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_5))
        {
            using (Html.Rp3BeginContentBox(Rp3.AgendaComercial.Resources.TitleFor.Categoria))
            {
                <text>
                    @Html.HiddenFor(model => model.IdCategoria)
                    @Html.Rp3FormGroupDisplayFor(model => model.Descripcion)
                    @Html.Rp3FormGroupDisplayFor(model => model.EstadoGeneralValue.Content, labelText: Rp3.AgendaComercial.Resources.LabelFor.Estado)
                </text>

                @Html.Rp3FormActionGroup(ActivityActions.Delete)
            }
        }
    }
}

<script>
    showDependenciaMessage();
</script>