@model IEnumerable<Rp3.AgendaComercial.Models.Pedido.Pedido>
@{
    ViewBag.Title = Rp3.AgendaComercial.Resources.TitleFor.Pedidos;
    this.SetImportAdvTables(true);
}

@section ActionTitle{

    @Html.Rp3ActionButton(Rp3.AgendaComercial.Resources.LabelFor.Excel, "ExportToXls", "Grupo", new { Area = "Pedido" }, themeType: ElementThemeType.Default, icon: Icons.File)
    @Html.Rp3ActionButton(Rp3.AgendaComercial.Resources.LabelFor.Pdf, "ExportToPdf", "Grupo", new { Area = "Pedido" }, themeType: ElementThemeType.Default, icon: Icons.File)
}


@using (Html.Rp3BeginColumn(HtmlColumnSize.Size_12))
{
    @Html.Partial("_GridViewIndex", Model)
}