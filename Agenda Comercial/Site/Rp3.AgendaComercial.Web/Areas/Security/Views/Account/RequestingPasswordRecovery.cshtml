@model Rp3.Web.Mvc.Application.Security.Models.ResetPassword
@{
    ViewBag.Title = Rp3.Resources.TitleFor.PasswordRecovery;    
}

@using(Html.Rp3BeginRow())
{
    using(Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
    {     
        using (Html.Rp3BeginContentBox(Rp3.Resources.TitleFor.PasswordRecovery))
        {           
            using (Html.Rp3BeginForm("RequestingPasswordRecovery", "Account", new { area = "Security" }))
            {
                <text>            
                    @Html.Rp3FormGroupTextBoxFor(model => model.Email)            
           
                    @Html.Rp3FormActionGroup(ActivityActions.Send)
                </text>    
            }
        }
    }
}        


