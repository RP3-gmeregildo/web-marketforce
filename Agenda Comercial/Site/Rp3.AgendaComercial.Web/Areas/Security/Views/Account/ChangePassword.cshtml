@model Rp3.Web.Mvc.Application.Security.Models.ChangePassword
@{
    ViewBag.Title = Rp3.Resources.TitleFor.ChangePassword;
    this.SetImportFormElements(true);
    this.SetImportFormValidations(true);
}
@using (Html.Rp3BeginContentBox(Rp3.Resources.TitleFor.ChangePassword))
{
    using (Html.Rp3BeginForm())
    {
        <text>            
            @Html.Rp3FormGroupDisplayFor(model=>model.LogonName)
            @Html.Rp3FormGroupDisplayFor(model=>model.Names)            
            @Html.Rp3FormGroupPasswordFor(model=>model.CurrentPassword)
            @Html.Rp3FormGroupPasswordFor(model=>model.NewPassword)
            @Html.Rp3FormGroupPasswordFor(model=>model.ConfirmNewPassword)

            @Html.Rp3FormActionGroup(ActivityActions.Save)
        </text>    
    }
}

