@model Rp3.Web.Mvc.Application.Security.Models.EditRole
@{
    ViewBag.Title = Rp3.Resources.TitleFor.EditRole;
    this.SetImportFormElements(true);
    this.SetImportFormValidations(true);
    this.SetImportTables(true);
}
@section Imports
{
    @Url.ImportStyleSheet("jquery.treegrid.css")
    @Url.ImportScript("treegrid/jquery.treegrid.js")
    @Url.ImportScript("rp3.role.js")
}

@section ActionTitle{
    @Html.Rp3ActivityActionButton(ActivityActions.Delete, target: "#mainform", themeType: ElementThemeType.Error)
}

@using (Html.Rp3BeginForm(htmlAttributes: new { id="mainform" }))
{
    using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_5))
        {
            using (Html.Rp3BeginContentBox(Rp3.Resources.LabelFor.GeneralData))
            {
                <text>
                    @Html.HiddenFor(model => model.RoleId)
                    @Html.Rp3FormGroupDisplayFor(model => model.Name)
                    @Html.Rp3FormGroupDisplayFor(model => model.Active)
                </text>                
            }
        }
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_7))
        {
            @:@{Html.RenderPartial("_RoleApplicationActivities", Model);}
                }
    }
}