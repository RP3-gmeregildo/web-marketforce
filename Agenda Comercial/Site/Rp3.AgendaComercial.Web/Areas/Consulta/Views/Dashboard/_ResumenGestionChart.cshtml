@model Rp3.AgendaComercial.Models.Consulta.View.DashboardResumenGestion
      
<div id="resumen-gestion-chart-container" style="width:100%; height:100%;"></div>
<script>

    $(function () {
        $('#resumen-gestion-chart-container').highcharts({
            chart: {
                type: 'column'
            },

            title: {
                text: '@Html.Raw(Rp3.AgendaComercial.Resources.TitleFor.ResumenGestionChart)',
                x: -20 //center
            },
            subtitle: {
                text: '@Html.Raw(Rp3.AgendaComercial.Resources.TitleFor.Visitas)',
                x: -20
            },
            xAxis: {
                categories: ['@Html.Raw(Rp3.AgendaComercial.Resources.LabelFor.Gestiones)']
            },
            yAxis: {               
                title: {
                    text: '@Html.Raw(Rp3.AgendaComercial.Resources.LabelFor.NumeroGestiones)'
                }
            }, 
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },            
            series: [{
                name: '@{@Rp3.AgendaComercial.Resources.LabelFor.IndicadorGestionados}',
                data: [@Model.Gestionados],
                color: '#6FBF56',
                dataLabels: {
                    enabled: true,
                    rotation: -90,
                    color: '#FFFFFF',
                    align: 'right',
                    x: 4,
                    y: 10,
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif',
                        textShadow: '0 0 3px black'
                    }
                }
            }, {
                name: '@{@Rp3.AgendaComercial.Resources.LabelFor.IndicadorNoGestionados}',
                data: [@Model.NoGestionados],
                color: '#BE2026',
                dataLabels: {
                    enabled: true,
                    rotation: -90,
                    color: '#FFFFFF',
                    align: 'right',
                    x: 4,
                    y: 10,
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif',
                        textShadow: '0 0 3px black'
                    }
                }
            }, {
                name: '@Html.Raw(@Rp3.AgendaComercial.Resources.LabelFor.IndicadorProximos)',
                data: [@Model.Proximos],
                color: '#335AA8',
                dataLabels: {
                    enabled: true,
                    rotation: -90,
                    color: '#FFFFFF',
                    align: 'right',
                    x: 4,
                    y: 10,
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif',
                        textShadow: '0 0 3px black'
                    }
                }
            }]
        });
    });
</script>
