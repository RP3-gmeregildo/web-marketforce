@model Rp3.AgendaComercial.Models.General.Cargo
@{
    ViewBag.Title = Rp3.AgendaComercial.Resources.TitleFor.EliminarCargo;
    this.SetImportFormElements(true);
    this.SetImportFormValidations(true);
    this.SetImportTables(true);
}

@if (!ViewBag.PermitirEliminar)
{
    @:@Html.Rp3AlertBlock("No es posible eliminar el Cargo actual, debido a que está asignado a un Agente.", Rp3.Data.MessageType.Warning, "Alerta")
}

@using (Html.Rp3BeginForm())
{
    using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_5))
        {
            using (Html.Rp3BeginContentBox(Rp3.AgendaComercial.Resources.TitleFor.Cargo))
            {
                <text>
                    @Html.HiddenFor(model => model.IdCargo)
                    @Html.Rp3FormGroupDisplayFor(model => model.Descripcion)
                    @Html.Rp3FormGroupDisplayFor(model => model.EsSupervisor)
                    @Html.Rp3FormGroupDisplayFor(model => model.EsAdministrador)
                    @Html.Rp3FormGroupDisplayFor(model => model.EstadoGeneralValue.Content, labelText: Rp3.AgendaComercial.Resources.LabelFor.Estado)
                </text>

    
                if (ViewBag.PermitirEliminar)
                { 
                    @Html.Rp3FormActionGroup(ActivityActions.Delete)
                }
            }
        }
    }
}