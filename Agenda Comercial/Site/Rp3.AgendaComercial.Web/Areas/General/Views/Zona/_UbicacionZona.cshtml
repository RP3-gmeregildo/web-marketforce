@model Rp3.AgendaComercial.Models.General.Ubicacion
@{
    //List<Rp3.Data.Models.General.GeopoliticalStructure> ciudades = (List<Rp3.Data.Models.General.GeopoliticalStructure>)ViewBag.Ciudades;
}

@using (Html.Rp3BeginModal("setDireccionDialog", customWidth: 900, includeOverlay: false))
{
    <div id="setDireccionDialogContent">
    </div>
}

<div id="content_direcciones" class="content_direcciones">
    @using (Html.Rp3BeginRow())
    {
        
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
        {
                <div class="action_item_content">
                    @if(!ViewBag.ReadOnly)
                    {
                        @Html.Rp3Button(Rp3.AgendaComercial.Resources.LabelFor.Editar, HtmlElementSize.Default, icon: Icons.MapMarker, submit: false,
                                                            htmlAttributes: new
                                                            {
                                                                ubicacion = "",
                                                                markerindex = Model.MarkerIndex,
                                                                markerstart = Model.MarkerStart,
                                                                markerzindex = Model.MarkerZIndex,
                                                                latitud = Model.Latitud == null ? -1 : Model.Latitud,
                                                                longitud = Model.Longitud == null ? -1 : Model.Longitud,
                                                                titulo = "Punto de Partida",
                                                                onclick = "setUbicacion(this); return false;"
                                                            });
                    }
                </div>
        }
    }
</div>

@using (Html.Rp3BeginModal("setUbicacionDialog", effect: ModalEffect.FlipVertical3D, customWidth: 850, includeOverlay: false))
{
    <div id="setUbicacionDialogContent">
    </div>
}

@Html.Rp3ModalOverlay()

<div id="content_mapClient" class="content_mapClient">
    @{ Html.RenderPartial("_UbicacionMapMarkerSingle", Model); }
</div>

