@model Rp3.AgendaComercial.Web.Ruta.RutaReassign
@{
    ViewBag.Title = Rp3.AgendaComercial.Resources.TitleFor.ReasignarRuta;
    this.SetImportFormElements(true);
    //this.SetImportFormValidations(true);
    this.SetImportTables(true);
}


@section ActionTitle{
    @Html.Rp3Button(Rp3.AgendaComercial.Resources.LabelFor.Reasignar, themeType: ElementThemeType.Success, icon: Icons.Save, target: "#rutaForm")
}

@using (Html.Rp3BeginForm(htmlAttributes: new { id = "rutaForm" }))
{
    using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_4))
        {
            using (Html.Rp3BeginContentBox())
            {
                @Html.HiddenFor(model => model.IdRuta)
                @Html.Rp3FormGroupTextBoxFor(model => model.Ruta, readOnly: true)
                @Html.Rp3FormGroupDropDownListFor(model => model.IdAgente, (SelectList)ViewBag.AgenteSelectList, editorHtmlAttributes: new { placeholder = Rp3.AgendaComercial.Resources.LabelFor.SeleccionarAgente })
            }
        }
    }

}

<script>

    rp3NotifyWarningAsBlock("Las Citas programadas para la Ruta actual serán reasignadas al agente a elegir.", "Advertencia", true);
</script>