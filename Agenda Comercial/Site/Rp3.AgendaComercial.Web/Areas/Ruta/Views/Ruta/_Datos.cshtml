@model Rp3.AgendaComercial.Models.Ruta.Ruta

<text>
    @Html.HiddenFor(model => model.IdRuta)
    @Html.HiddenFor(model => model.Lotes)

    @using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
        {
            if (!Model.ReadOnly)
            {
                @Html.Rp3FormGroupTextBoxFor(model => model.Descripcion, labelSize: HtmlColumnSize.Size_2)
            }
            else
            {
                @Html.Rp3FormGroupDisplayFor(model => model.Descripcion, labelSize: HtmlColumnSize.Size_2)
            }
        }

        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
        {
            @Html.Rp3FormGroupDisplayFor(model => model.Agente, labelSize: HtmlColumnSize.Size_2)
        } 
    }

    @using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
        {
            if (!Model.ReadOnly)
            {
                @Html.Rp3FormGroupDropDownListFor(model => model.IdCalendario, (SelectList)ViewBag.CalendariosSelectList, labelSize: HtmlColumnSize.Size_2, editorHtmlAttributes: new { placeholder = Rp3.AgendaComercial.Resources.LabelFor.SeleccionarCalendario })
            }
            else
            {
                @Html.Rp3FormGroupDisplayFor(model => model.Calendario.Descripcion, labelSize: HtmlColumnSize.Size_2)
            }
        }

        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_6))
        {
            if (!Model.ReadOnly)
            {
                @Html.Rp3FormGroupDropDownGeneralValuesFor(model => model.Estado, Rp3.AgendaComercial.Models.Constantes.Estado.Tabla, labelSize: HtmlColumnSize.Size_2)
            }
            else
            {
                @Html.Rp3FormGroupDisplayFor(model => model.EstadoGeneralValue.Content, labelText: Rp3.AgendaComercial.Resources.LabelFor.Estado, labelSize: HtmlColumnSize.Size_2)
            }
        }
    }


    @using (Html.Rp3BeginRow())
    {
        using (Html.Rp3BeginColumn(HtmlColumnSize.Size_12))
        {
            <div class="select2-cover">
                @Html.Rp3FormGroupDropDownListFor(model => model.Lotes, new MultiSelectList(ViewBag.Lotes, "IdLote", "Descripcion"), labelSize: HtmlColumnSize.Size_1,
                 editorHtmlAttributes: new { style = "height:100px", lotes = "", multiple = "", placeholder = @Rp3.AgendaComercial.Resources.LegendFor.LoteToken })

                @*@Html.Rp3FormGroupDropDownList(new MultiSelectList(ViewBag.Lotes, "IdLote", "Descripcion"), labelText: Rp3.AgendaComercial.Resources.LabelFor.Lote, labelSize: HtmlColumnSize.Size_1, name: "loteselect", 
                    editorHtmlAttributes: new { style = "height:100px", lotes = "", multiple = "", placeholder = @Rp3.AgendaComercial.Resources.LegendFor.LoteToken })*@
            </div>
        }
    }
</text>
<script>
     @if (Model.ReadOnly)
     {
         <text>
     var readOnly = true;
         </text>
     }
     else
     {
         <text>
     var readOnly = false;
         </text>
     }

    $(function () {
        init_Datos();
    });
</script>
<style>
    .select2-search-choice{ 
        color: black; 
    }

    .select2-container-multi .select2-choices {
        min-height: 100px;
        height: 100px !important;
        overflow: scroll;
        overflow-x: hidden;
        overflow-y: auto;
    }

