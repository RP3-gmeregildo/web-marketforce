            <td style="margin-left:10px">@ViewBag.ColorDetalle</td>
            <td style="width:40px"></td>
            <td></td>
        </tr>
        <tr>
            <td><img class="" style="margin-right:1px;margin-top:-4px" width="16" height="16" src="@Url.ContentApplicationImage((string)ViewBag.OrigenImageUrl)" /></td>
            <td style ="margin-left:10px">@ViewBag.FechaInicio.ToString("dd/MM/yyyy HH:mm") - @ViewBag.FechaFin.ToString("HH:mm")</td>
            <td style="width:100px"></td>
            @if (ViewBag.EstadoAgenda == Rp3.AgendaComercial.Models.Constantes.EstadoAgenda.Visitada)
            {
                <td><i class="fa fa-calendar" style="margin-left:5px"></i></td>
                <td style="margin-left:10px">@ViewBag.FechaInicioGestion.ToString("HH:mm") - @ViewBag.FechaFinGestion.ToString("HH:mm")</td>
                <td style="width:40px"></td>
                <td></td>
            }
            else
            {
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            }
        </tr>
    </tbody>
</table>

