            <td style="margin-left:10px"><strong>@ViewBag.ClienteContacto</strong></td>
            <td style="width:100px"></td>
            <td><img class="" style="margin-right:1px;margin-top:-4px" width="16" height="16" src="@Url.ContentApplicationImage("/style/markervisit.png")" /></td>
            <td style="margin-left:10px"><strong>@ViewBag.Agente</strong></td>
            <td style="width:40px"></td>
            <td>
                <div style="float:right;">
                    <div style="cursor:pointer;color:blue" onclick="openNotificacion()"><i class="fa fa-comments-o"></i> Enviar notificación</div>
                    <input type="hidden" id="IdAgenteAgenda" value="@ViewBag.IdAgente" />
