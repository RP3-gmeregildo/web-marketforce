@model IEnumerable<Rp3.AgendaComercial.Models.Ruta.ProgramacionRuta>
@{
    
}

@Html.Rp3().GridView(
    settings =>
    {
        settings.Name = "gridViewIndex";
        settings.CallbackRouteValues = new { Controller = "ProgramacionRuta", Action = "GridViewIndex" };
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);

        settings.ClientSideEvents.CustomButtonClick = "function(s, e) { document.location= e.buttonID + '?id=' + s.GetRowKey(e.visibleIndex); }";
        settings.KeyFieldName = "IdProgramacionRuta";

        settings.Columns.Add(column =>
        {
            column.Caption = Rp3.AgendaComercial.Resources.LabelFor.ProgramacionRuta;
            column.FieldName = "Descripcion";
            column.SortOrder = 0;
            column.SortOrder = DevExpress.Data.ColumnSortOrder.Ascending;
        });

        settings.Columns.Add("Ruta.Descripcion", Rp3.AgendaComercial.Resources.LabelFor.Ruta);
        settings.Columns.Add("DuracionGeneralValue.Content", Rp3.AgendaComercial.Resources.LabelFor.Duracion);

        settings.Columns.Add(column =>
        {
            column.Caption = Rp3.AgendaComercial.Resources.LabelFor.EsAbierta;
            column.FieldName = "EsAbierta";
            column.ColumnType = MVCxGridViewColumnType.CheckBox;
            column.ReadOnly = true;
        });

        settings.Columns.Add(column =>
        {
            column.Caption = Rp3.AgendaComercial.Resources.LabelFor.EsIndefinida;
            column.FieldName = "EsIndefinida";
            column.ColumnType = MVCxGridViewColumnType.CheckBox;
            column.ReadOnly = true;
        });

        settings.Columns.Add("FechaInicio", Rp3.AgendaComercial.Resources.LabelFor.FechaInicio).PropertiesEdit.DisplayFormatString = "d";
        settings.Columns.Add("FechaFin", Rp3.AgendaComercial.Resources.LabelFor.FechaFin).PropertiesEdit.DisplayFormatString = "d";
        settings.Columns.Add("EstadoGeneralValue.Content", Rp3.AgendaComercial.Resources.LabelFor.Estado);
    },
    new List<OptionAction>() { 
        new OptionAction("PROGRAMARUTA", "DETAIL", "AGENDACOMERCIAL"),
        new OptionAction("PROGRAMARUTA", "EDIT", "AGENDACOMERCIAL"),
        new OptionAction("PROGRAMARUTA", "DELETE", "AGENDACOMERCIAL"),
        new OptionAction("PROGRAMARUTA", "CONFIGURATOR", "AGENDACOMERCIAL"),
        new OptionAction("PROGRAMARUTA", "PROCESS", "AGENDACOMERCIAL"),
    }).Bind(Model).GetHtml()