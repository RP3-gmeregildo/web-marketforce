@model IEnumerable<Rp3.AgendaComercial.Models.General.ClienteDireccion>
@{

}

@if (Model.Count() > 0)
{
    using (Html.Rp3BeginDataTable(allowSort: false, allowPagination: false, allowSearch: false, htmlAttributes: new { id = "programacionrutadetalle" }))
    {
        <thead>
            <tr>
                <th>@Rp3.AgendaComercial.Resources.LabelFor.Cliente</th>
                <th>@Rp3.AgendaComercial.Resources.LabelFor.Direccion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(p => p.Cliente.Apellido1))
            {
                <tr class="draggable">
                    <input name="clienteruta" type="hidden" value="@item.IdCliente-@item.IdClienteDireccion">
                    <td>@item.Cliente.NombresCompletos</td>
                    <td>@item.Etiqueta</td>
                </tr>
            }
        </tbody>
    }
}